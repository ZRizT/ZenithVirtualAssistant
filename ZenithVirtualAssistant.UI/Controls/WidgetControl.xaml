<UserControl
    x:Class="ZenithVirtualAssistant.UI.Controls.WidgetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border Background="{ThemeResource SystemControlAcrylicElementBrush}" CornerRadius="10" Padding="10">
        <StackPanel>
            <TextBlock Text="Zenith Widget" FontSize="18" Margin="0,0,0,10" />
            <Button Content="Open Terminal" Click="OpenTerminal_Click" />
            <Button Content="Open Notepad" Click="OpenNotepad_Click" />
            <Button Content="Shutdown" Click="Shutdown_Click" />
        </StackPanel>
    </Border>
</UserControl>